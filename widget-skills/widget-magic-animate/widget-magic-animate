#!/bin/bash
# widget-magic-animate - MagicAnimate - Animate person images with motion
# Transfer motion from a reference video to a person image

set -e

WIDGET_ID="1743838663432736768"

# Read config from myshell-config.json
MYSHELL_CONFIG="/root/.clawdbot/myshell-config.json"
if [ -f "$MYSHELL_CONFIG" ]; then
  API_BASE=$(jq -r '.openapi.host // "https://openapi-test.myshell.fun"' "$MYSHELL_CONFIG")
  API_KEY=$(jq -r '.openapi.request_headers["x-myshell-openapi-key"] // empty' "$MYSHELL_CONFIG")
  USER_ID=$(jq -r '.openapi.request_headers["x-myshell-openapi-user-id"] // .myshell_user_id // 3568326' "$MYSHELL_CONFIG")
else
  API_BASE="${WIDGET_API_BASE:-https://openapi-test.myshell.fun}"
  API_KEY="${WIDGET_API_KEY}"
  USER_ID="${MYSHELL_USER_ID:-3568326}"
fi

OUTPUT=""
IMAGE=""
VIDEO=""

# Parse arguments
while [[ $# -gt 0 ]]; do
  case $1 in
    -o|--output) OUTPUT="$2"; shift 2 ;;
    --image) IMAGE="$2"; shift 2 ;;
    --video) VIDEO="$2"; shift 2 ;;
    -h|--help)
      echo "Usage: widget-magic-animate [options] <image_url> --video <video_url>"
      echo ""
      echo "Animate a person image using motion from a reference video."
      echo "The person in the image will perform the same motions as in the video."
      echo ""
      echo "Options:"
      echo "  -o, --output FILE    Save output to file"
      echo "  --image URL          Person image URL (full body or upper body recommended)"
      echo "  --video URL          Motion reference video URL (dancing, walking, etc.)"
      echo "  -h, --help           Show this help"
      echo ""
      echo "Example:"
      echo "  widget-magic-animate --image 'https://images.pexels.com/photos/1040880/pexels-photo-1040880.jpeg' \\"
      echo "                       --video 'https://videos.pexels.com/video-files/3015510/3015510-sd_640_360_24fps.mp4'"
      echo ""
      echo "Notes:"
      echo "  - Image should show a person (full body works best)"
      echo "  - Video should contain human motion to transfer"
      echo "  - Processing takes 8-10 minutes (this is normal)"
      echo "  - Some sources (Wikipedia) may be blocked; Pexels recommended"
      exit 0
      ;;
    -*) echo "Unknown option: $1"; exit 1 ;;
    *) IMAGE="$1"; shift ;;
  esac
done

if [ -z "$IMAGE" ]; then
  echo "Error: No person image provided"
  echo "Usage: widget-magic-animate --image <url> --video <url>"
  exit 1
fi

if [ -z "$VIDEO" ]; then
  echo "Error: No motion reference video provided"
  echo "Usage: widget-magic-animate --image <url> --video <url>"
  exit 1
fi

if [ -z "$API_KEY" ]; then
  echo "Error: API key not configured"
  exit 1
fi

# Build input JSON
INPUT_JSON=$(jq -n \
  --arg image "$IMAGE" \
  --arg video "$VIDEO" \
  '{image: $image, video: $video}')

# Call Widget API
RESPONSE=$(curl -s -X POST "$API_BASE/public/v2/widget/run" \
  -H "x-myshell-openapi-key: $API_KEY" \
  -H "x-myshell-openapi-user-id: $USER_ID" \
  -H "x-myshell-caller-service: shellclawdbot" \
  -H "Content-Type: application/json" \
  --max-time 900 \
  -d "{\"widget_id\":\"$WIDGET_ID\",\"input\":$(echo "$INPUT_JSON" | jq -Rs .)}")

# Check for error
if echo "$RESPONSE" | jq -e '.message' > /dev/null 2>&1; then
  ERROR=$(echo "$RESPONSE" | jq -r '.message // "Unknown error"')
  echo "Error: $ERROR" >&2
  exit 1
fi

# Extract result
RESULT=$(echo "$RESPONSE" | jq -r '.result // empty')
if [ -z "$RESULT" ]; then
  echo "Error: No result in response" >&2
  echo "$RESPONSE" >&2
  exit 1
fi

# Get output URL/data
OUTPUT_DATA=$(echo "$RESULT" | jq -r '.file_url // .file_urls[0] // empty')
if [ -z "$OUTPUT_DATA" ]; then
  OUTPUT_DATA=$(echo "$RESULT" | jq -r 'if type == "string" then . elif .url then .url elif .file_urls[0] then .file_urls[0] else empty end')
fi

if [ -z "$OUTPUT_DATA" ]; then
  echo "Error: No output data in result" >&2
  echo "$RESULT" >&2
  exit 1
fi

# Output result
if [ -n "$OUTPUT" ]; then
  curl -s -o "$OUTPUT" "$OUTPUT_DATA"
  echo "$OUTPUT"
else
  echo "$OUTPUT_DATA"
fi
